  "formulas": {
    "integral_uniformity": {
      "formula": "IU = ((max - min) / (max + min)) \u00d7 100%",
      "description": "Maximum and minimum pixel counts in region of interest"
    },
    "differential_uniformity": {
      "formula": "DU = ((high - low) / (high + low)) \u00d7 100%",
      "description": "Maximum difference in any 5 contiguous pixels"
    },
    "energy_resolution": {
      "formula": "ER = (FWHM / E_peak) \u00d7 100%",
      "description": "Full width at half maximum divided by peak energy"
    },
    "hounsfield_unit": {
      "formula": "HU = ((\u03bc - \u03bc_water) / \u03bc_water) \u00d7 1000",
      "description": "Linear attenuation coefficient scaling"
    },
    "ctdi_weighted": {
      "formula": "CTDIw = (1/3)\u00d7CTDI_center + (2/3)\u00d7CTDI_periphery",
      "description": "Weighted CT dose index"
    }
  }
